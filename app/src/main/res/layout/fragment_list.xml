<?xml version="1.0" encoding="utf-8"?>
<layout>
    <data>
        <variable
            name="viewmodel"
            type="com.io.movies.ui.fragment.ListViewModel" />
    </data>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.fragment.ListFragment"
    android:orientation="vertical"
    android:background="@color/grey">

    <EditText
        android:id="@+id/edit_title"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:background="@drawable/edit_background"
        android:inputType="text"
        android:textColor="@color/grey"
        android:hint="@string/edit_beer"
        android:shadowColor="@color/grey"
        tools:text="@string/edit_beer"
        style="@style/CustomEditText"
        android:textColorHint="@color/grey"
        android:importantForAutofill="no"
        tools:ignore="LabelFor"
        android:padding="10dp"
        android:layout_marginTop="5dp"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/movies_recycler"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginTop="10dp"
        android:orientation="vertical"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        tools:listitem="@layout/item_movie_info"
      />


</LinearLayout>
</layout>