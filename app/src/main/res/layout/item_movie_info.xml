<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="movie"
            type="com.io.movies.model.Movie" />
    </data>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="20dp"
        app:cardElevation="4dp"
        android:layout_margin="15dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/grey">

            <ImageView
                android:id="@+id/icon"
                android:layout_width="180dp"
                android:layout_height="230dp"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="15dp"
                android:layout_marginStart="10dp"
                android:adjustViewBounds="true"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:src="@tools:sample/avatars"
                android:contentDescription="@string/poster" />

            <ImageButton
                android:id="@+id/favorite"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/images_favorite"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginEnd="10dp"
                android:layout_marginTop="10dp"
                android:focusable="true"
                android:background="@drawable/background_favorite"
                android:contentDescription="@string/favorite" />

            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="15dp"
                android:layout_marginStart="5dp"
                android:textColor="@color/white"
                android:textSize="25sp"
                android:gravity="end"
                app:layout_constrainedWidth="true"
                android:text="@{movie.title}"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="1"
                app:layout_constraintStart_toEndOf="@+id/icon"
                app:layout_constraintTop_toBottomOf="@+id/favorite"
                tools:text="@tools:sample/cities"/>

            <TextView
                android:id="@+id/vote_average"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawablePadding="5dp"
                android:gravity="center"
                android:maxLength="4"
                android:textColor="@color/yellow"
                android:textSize="16sp"
                app:drawableStartCompat="@drawable/ic_baseline_star_24"
                app:layout_constraintEnd_toEndOf="@+id/title"
                app:layout_constraintHorizontal_bias="1"
                app:layout_constraintVertical_bias="0.9"
                app:layout_constraintStart_toEndOf="@+id/icon"
                app:layout_constraintBottom_toTopOf="@id/year"
                app:layout_constraintTop_toBottomOf="@id/title"
                tools:text="7.77"
                android:text='@{movie.voteAverage + ""}'/>

            <TextView
                android:id="@+id/year"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="parent"
                android:maxLength="4"
                android:gravity="center"
                android:textColor="@color/pre_black"
                android:textSize="14sp"
                tools:text="2010"
                android:layout_marginBottom="15dp"
                android:layout_marginTop="10dp"
                app:layout_constraintEnd_toEndOf="@id/title"
                android:text='@{movie.releaseDate == null? "-" : (movie.releaseDate.year  + 1900) + ""}'/>


        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</layout>